<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChart"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="81dp" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/selectedCurrency1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Currency 1: --"
                android:layout_below="@id/toolbar"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/selectedCurrency2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Currency 2: --"
                android:layout_below="@id/selectedCurrency1"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:textColor="#FFFFFF" />
        </androidx.appcompat.widget.Toolbar>

        <Button
            android:id="@+id/btn_show_popup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:text="Menu" />

        <Button
            android:id="@+id/btn_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload"
            android:layout_below="@id/pieChart"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

        <Spinner
            android:id="@+id/spinner_categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_upload"
            android:layout_marginTop="20dp"
            android:layout_marginStart="16dp"/>


        <Spinner
            android:id="@+id/spinner_family_members"
            android:layout_alignStart="@id/pieChart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pieChart"
            android:layout_marginTop="-316dp" />

        <Spinner
            android:id="@+id/spinner_financial_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/spinner_family_members"
            android:layout_alignStart="@id/spinner_family_members"
            android:layout_marginTop="320dp" />


        <EditText
            android:id="@+id/editText_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/spinner_categories"
            android:layout_alignTop="@id/spinner_categories"
            android:layout_marginStart="16dp"
            android:hint="Amount"
            android:inputType="numberDecimal"/>

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/spinner_categories"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Submit"/>

        <Button
            android:id="@+id/btn_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="21dp"
            android:text="Chat" />
    </RelativeLayout>
</ScrollView>
