<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChart"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="81dp" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:layout_constraintTop_toTopOf="parent">

        <!-- Add a TextView for the currency rate display -->
        <TextView
            android:id="@+id/currencyExchangeRateEURUSD"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="EUR/USD: --"
            tools:ignore="RelativeOverlap"
            android:paddingEnd="16dp" />


        <TextView
            android:id="@+id/currencyExchangeRateTLUSD"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="TL/USD: --"
            tools:ignore="RelativeOverlap"
            android:paddingEnd="16dp" />


        </androidx.appcompat.widget.Toolbar>

        <Button
            android:id="@+id/btn_show_popup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menu"
            android:layout_alignParentEnd="true"
            android:layout_margin="16dp"
            tools:ignore="RelativeOverlap" />

        <Button
            android:id="@+id/btn_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload"
            android:layout_below="@id/pieChart"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

        <Spinner
            android:id="@+id/spinner_categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_upload"
            android:layout_marginTop="20dp"
            android:layout_marginStart="16dp"/>

        <EditText
            android:id="@+id/editText_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/spinner_categories"
            android:layout_alignTop="@id/spinner_categories"
            android:layout_marginStart="16dp"
            android:hint="Amount"
            android:inputType="numberDecimal"/>

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/spinner_categories"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Submit"/>



    </RelativeLayout>
</ScrollView>
